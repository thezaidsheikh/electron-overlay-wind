{
  "name": "electron-overlay-wind",
  "version": "1.3.0",
  "author": {
    "name": "Zaid Qureshi",
    "contributors": [
      "Alexander Drozdov"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thezaidsheikh/electron-overlay-wind.git"
  },
  "license": "MIT",
  "keywords": [
    "window",
    "overlay",
    "electron",
    "event",
    "watch",
    "foreground"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "install": "node-gyp-build",
    "start:dev": "pnpm run build:dev && pnpm run demo:electron",
    "build": "tsc && npm run copy:assets",
    "build:dev": "tsc --sourceMap && npm run copy:assets",
    "build:prod": "tsc --sourceMap false && npm run copy:assets",
    "clean": "rm -rf dist build",
    "copy:assets": "mkdir -p dist/demo && cp -r src/demo/*.{html,js} dist/demo/ && cp -r src/demo/*.css dist/demo/ 2>/dev/null || :",
    "prebuild": "prebuildify --napi",
    "demo:electron": "node-gyp rebuild && npm run copy:assets && tsc && electron dist/demo/electron-demo.js",
    "deploy": "./scripts/deploy.sh"
  },
  "files": [
    "dist/index.d.ts",
    "dist/index.js",
    "dist/index.js.map",
    "dist/demo",
    "binding.gyp",
    "src/lib",
    "prebuilds"
  ],
  "devDependencies": {
    "@types/node": "18.x.x",
    "@types/throttle-debounce": "5.x.x",
    "electron": "24.x.x",
    "prebuildify": "6.x.x",
    "typescript": "5.x.x"
  },
  "dependencies": {
    "node-gyp-build": "4.x.x",
    "throttle-debounce": "5.x.x"
  },
  "gypfile": true,
  "engines": {
    "node": ">= 16"
  },
  "peerDependencies": {
    "electron": ">= 18"
  }
}
