{
  "compilerOptions": {
    "target": "ES2018",
    "alwaysStrict": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["dom", "ES2021"]
  },
  "include": ["src/**/*", "src/**/*.js", "src/**/*.html"]
}
